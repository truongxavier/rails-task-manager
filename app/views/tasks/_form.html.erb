<%= form_with model: @task do |f| %>
  <div class="shadow-sm rounded px-4 py-3 mb-2 border d-flex">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="shadow-sm rounded px-4 py-3 mb-2 border d-flex">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <div class="shadow-sm rounded px-4 py-3 mb-2 border d-flex">
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <%= f.submit %>
<% end %>
